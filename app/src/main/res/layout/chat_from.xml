<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    >

    <TextView
        android:id="@+id/to_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_message_bubble"
        android:maxWidth="300dp"
        android:padding="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:text="This my Message"
        app:layout_constraintBottom_toBottomOf="@+id/to_message_user_icon"
        app:layout_constraintEnd_toStartOf="@+id/to_message_user_icon"
        app:layout_constraintTop_toTopOf="@+id/to_message_user_icon" />

    <ImageView
        android:id="@+id/to_message_user_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_default_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>